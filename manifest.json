{
  "manifest_version": 3,
  "name": "Material Badge",
  "version": "1.1.0",
  "description": "Shows material composition badges on COS and Uniqlo product listing pages",
  "permissions": [],
  "host_permissions": ["*://*.cos.com/*", "*://*.uniqlo.com/*", "*://*.arket.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.cos.com/*", "*://*.uniqlo.com/*", "*://*.arket.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {}
}
